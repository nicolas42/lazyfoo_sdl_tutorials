{
	// ------------------------
	// MARK: Channel group view
	
	OutputGroupView:
	{
		+: TileView,
		nsClass: LBTileOutputView,
		axDescriptionKeyPath: "name",
		axRoleDescription: "Output channels group",
		channelViewKey: "OutputChannelView",
		patchboardColumn: 2,							// 3rd column in the patchboard
		gxLayout: [
			"H:[self(208)]",
			"H:|-13-[name]-13-|",
			"H:|-13-[channelsView]-13-|",
			"V:|-11-[name]",
			"V:|-33-[dividerTop]-10-[channelsView(>=52)]-3-|",
		],
		gxChildViews:
		{
			name:
			{
				+: LabelView.left.darkTextColor.bold.size13,
				gxValueKeyPath: name
			},
			dividerTop:
			{
				nsClass: GXDrawView,
				gxLayout: [ "H:|-3-[self]-3-|", "V:[self(1)]" ],	// inset is tileSelectionWidth
				gxBackPainter:
				{
					nsClass: GXPainter,
					gxEdgeInsets: "1, 0, 1, .5",
					gxFillColor: "name:tileDivider"
				}
			},
			channelsView:
			{
				nsClass: "GXListView",
				axIsIgnored: true,
				gxTitle: "Output Channels"
			}
		}
	},
	
	// -------------------------
	// MARK: Output channel view
	
	OutputChannelView:
	{
		nsClass: LBChannelView,
		axDescriptionKeyPath: raAccessibilityValueDescription,
		axIsIgnored: false,
		axRoleDescription: "Channel",
		gxAlwaysUpdate: true,
		gxWantsLayer: true,
		gxIntrinsicHeight: 20,
		gxLayout: [
			"H:|-0-[inputAnchor]-4-[name(71)]-[activeMeter]-4-[outputAnchor]-0-|",
			"H:[name]-[levelMeter]-4-[outputAnchor]",
			"H:[self]-(<=0)-[inputAnchor]&alignCenterY",
			"H:[self]-(<=0)-[name]&alignCenterY",
			"H:[self]-(<=0)-[activeMeter]&alignCenterY",
			"H:[self]-(<=0)-[levelMeter]&alignCenterY",
			"H:[self]-(<=0)-[outputAnchor]&alignCenterY",
		],
		gxChildViews:
		{
			inputAnchor:
			{
				+: SocketView,
				targetColumn: 0
			},
			name:
			{
				+: LabelView.left.darkTextColor.size11,
				gxValueKeyPath: "name",
			},
			activeMeter:
			{
				+: ActiveMeter,
				gxLayout: [ "V:[self(8)]" ],
				gxAnimateOnKey: "enclosingTile.enabledForActiveMeter"
			},
			levelMeter:
			{
				+: LevelMeter,
				gxLayout: [ "V:[self(8)]" ],
				gxAnimateOnKey: "enclosingTile.enabledForLevelMeter"
			},
			outputAnchor:
			{
				+: SocketView,
				targetColumn: 4
			}
		}
	},
}
